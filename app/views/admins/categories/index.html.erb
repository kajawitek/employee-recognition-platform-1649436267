<h1>Categories</h1>
  <table class='table'>
    <thead class="table-dark">
      <tr>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.title %></td>
          <td><%= link_to 'Edit', edit_admins_category_path(category) %></td>
          <td><%= link_to 'Destroy', admins_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
</table>
<br>
<%= link_to 'New Category', new_admins_category_path %>
