<h1>Rewards</h1>
  <table class="table">
    <thead class="table-dark">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>Category</th>
        <th>Number of available items</th>
        <th>Delivery method</th>

        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @rewards.each do |reward| %>
        <tr>
          <td><%= reward.title %></td>
          <td><%= reward.description %></td>
          <td><%= number_to_currency(reward.price) %></td>
          <% if reward.category.present? %>
            <td><%= reward.category.title %></td>
          <% else %>
            <td>(no category)</td>
          <% end %>
          <td><%= reward.number_of_available_items %></td>
          <td><%= reward.delivery_method.humanize %></td>
          <td><%= link_to 'Show', admins_reward_path(reward) %></td>
          <td><%= link_to 'Edit', edit_admins_reward_path(reward) %></td>
          <td><%= link_to 'Destroy', admins_reward_path(reward), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
</table>
<br>
<%= link_to 'New Reward', new_admins_reward_path %>
<%= link_to 'Import Rewards', import_admins_rewards_path %>
