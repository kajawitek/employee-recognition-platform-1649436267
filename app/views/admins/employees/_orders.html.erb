<h1>Employee orders</h1>
  <table class="table">
    <thead class="table-dark">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Purchase time</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.reward.title %></td>
          <td><%= order.reward.description %></td>
          <td><%= time_ago_in_words(order.created_at) %> ago</td>
          <td><%= order.purchase_price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>