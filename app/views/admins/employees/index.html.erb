<h1>Add Available Kudos</h1>

<%= form_with url: add_available_kudos_admins_employees_path(@employees), method: :patch do |form| %>
  <%= form.number_field :number_of_additional_kudos, in: 1..20, step: 1 %>
  <%= form.submit "Add kudos" %>
<% end %>

<h1>Employees</h1>

  <table class="table">
    <thead class="table-dark">
      <tr>
        <th>Full name</th>
        <th>Email</th>
        <th>Number of kudos</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @employees.each do |employee| %>
        <tr employee-id="<%= employee.id %>">
          <td><%= employee.full_name %></td>
          <td><%= employee.email %></td>
          <td><%= employee.number_of_available_kudos %></td>
          <td><%= link_to 'Show', admins_employee_path(employee) %></td>
          <td><%= link_to 'Edit', edit_admins_employee_path(employee) %></td>
          <td><%= link_to 'Destroy', admins_employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
</table>
<br>
