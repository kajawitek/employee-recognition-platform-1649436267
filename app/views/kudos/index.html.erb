<h1>Kudos</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Giver</th>
        <th>Receiver</th>
        <th>Company value</th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @kudos.each do |kudo| %>
        <tr>
          <td><%= kudo.title %></td>
          <td><%= kudo.content %></td>
          <td><%= kudo.giver.email %></td>
          <td><%= kudo.receiver.email %></td>
          <td><%= kudo.company_value.title %></td>
          <td><%= link_to 'Show', kudo %></td>
          <% if current_employee == kudo.giver %>
            <td><%= link_to 'Edit', edit_kudo_path(kudo) %></td>
            <td><%= link_to 'Destroy', kudo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Kudo', new_kudo_path %>
